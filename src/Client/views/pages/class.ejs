<!DOCTYPE html>
<html dir="rtl">
<head>
    <title>VCS Class <%= classId %> <%= myClass._name %></title>
    <% include ../partials/head %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/myRooms.css">
    <script>
        var rooms = <%- JSON.stringify(rooms) %>;
        var alert = <%- JSON.stringify(alert) %>;
        var isTeacher = <%- JSON.stringify(isTeacher) %>;
        var enterRoom = "<%- strings.EnterRoom %>";
    </script>
    <script src="/scripts/class.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<header>
    <% include ../partials/header %>
</header>
<section class="jumbotron text-center">
    <div class="container">
        <h1 class="jumbotron-heading"><%= myClass._name %></h1>
        <p class="lead text-muted"><%= myClass._descriptions %></p>
        <p class="lead text-muted"><%- strings.Here_you_can_see_Rooms_that_you_can_join %></p>
        <br>
    </div>

    <% if (isTeacher) { %>
    <nav id="key" class="navbar">
        <%- strings.key %>:
        <br><br>
        <div class="alertType alert alert-primary" role="alert">
            Technical Challenge
        </div>

        <div class="alertType alert alert-danger" role="alert">
            Idleness
        </div>

        <div class="alertType alert alert-success" role="alert">
            Final Answer
        </div>

        <div class="alertType alert alert-warning" role="alert">
            Non Mathematical Discussion
        </div>
    </nav>
    <% } %>
</section>


<div class="album text-muted">
    <div class="container">
        <script>
            document.write(getRoomsHtml());
        </script>
    </div>
</div>
<br/><br/><br/><br/>
<footer>
    <% include ../partials/footer %>
</footer>
<br/><br/><br/><br/>
</body>
</html>