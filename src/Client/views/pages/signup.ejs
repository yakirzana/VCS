<!DOCTYPE html>
<html dir="rtl">
<head>
    <title>VCS <%- strings.register %></title>
    <% include ../partials/head %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/login.css">
</head>
<body>
<header>
    <% include ../partials/header %>
</header>

<div class="container">

    <div id="login">

        <h1><%- strings.register %></h1><br/>

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/signup" method="post">
            <div class="form-group">
                <label><%- strings.Username %></label>
                <input type="text" class="form-control" name="username">
            </div>
            <div class="form-group">
                <label><%- strings.Password %></label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
                <label><%- strings.email %></label>
                <input type="text" class="form-control" name="email">
            </div>
            <div class="form-group">
                <label><%- strings.firstName %></label>
                <input type="text" class="form-control" name="firstName">
            </div>
            <div class="form-group">
                <label><%- strings.lastName %></label>
                <input type="text" class="form-control" name="lastName">
            </div>
            <div class="control-group">
                <label class="control-label" for="gender"><%- strings.gender %></label>
                <div class="controls">
                    <label class="radio inline" for="gender-0">
                        <input name="gender" id="gender-0" value="<%- strings.male %>" checked="checked" type="radio">
                        <%- strings.male %>
                    </label>
                    <label class="radio inline" for="gender-1">
                        <input name="gender" id="gender-1" value="<%- strings.female %>" type="radio">
                        <%- strings.female %>
                    </label>
                </div>
            </div>

            <button type="submit" class="btn btn-warning btn-lg"><%- strings.register %></button>
        </form>

        <p><%- strings.HaveAnAccount %> <a href="/login"><%- strings.login %>.</a></p>
        <p><%- strings.OrGo %> <a href="/"><%- strings.Home %></a>.</p>

    </div>

</div>

<footer>
    <% include ../partials/footer %>
</footer>
</body>
</html>